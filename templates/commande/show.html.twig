                <th>DateCommande</th>
                <td class="text-primary fw-bold">{{ commande.dateCommande ? commande.dateCommande|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NomPersonne</th>
                <td class="text-primary fw-bold">{{ commande.nomPersonne }}</td>
            </tr>
            <tr>
                <th>AddressPersonne</th>
                <td class="text-primary fw-bold">{{ commande.addressPersonne }}</td>
            </tr>
            <tr>
                <th>EmailPersonne</th>
                <td class="text-primary fw-bold">{{ commande.emailPersonne }}</td>
            </tr>
            <tr>
                <th>PrixTotale</th>
                <td class="text-primary fw-bold">{{ commande.prixTotale }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td class="text-primary fw-bold">{{ commande.discount }}</td>
            </tr>
        </tbody>
    </table>



    {{ include('commande/_delete_form.html.twig') }}
