{% extends 'base-back.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>
    <a href="{{ path('app_commande_index') }}"class="ri-arrow-go-back-fill btn btn-outline-primary"></a>

    <a href="{{ path('app_commande_edit', {'idCommande': commande.idCommande}) }}"class=" btn btn-outline-primary bi bi-pencil-square"></a>
    <table class="table">
        <tbody>
            {# <tr>
                <th>IdCommande</th>
                <td>{{ commande.idCommande }}</td>
            </tr> #}
