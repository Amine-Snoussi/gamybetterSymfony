    <a href="{{ path('app_commentaire_index') }}" class="ri-arrow-go-back-fill btn btn-outline-primary"></a>

    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}" class=" btn btn-outline-primary bi bi-pencil-square"></a>

    {{ include('commentaire/_delete_form.html.twig') }}
