{% extends 'base-front.html.twig' %}

{% block title %}Hello CoursPanierController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <table class="nk-table">
        <thead>
        <tr>
            <th colspan="3">Your articles</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th class="text-center">Product</th>
            <th class="text-center">Price</th>

        </tr>
        {% for product in items %}
            <tr>
                <td>
                    {{ product.nom }}
                </td>
                <td>
                    {{ product.price }}
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
    <!-- END: Table -->

    {{ parent() }}

    <form action="/checkout" method="POST">
        <button type="submit" class="nk-btn nk-btn-rounded nk-btn-color-main-1">Checkout</button>
    </form>

    <div>

    </div>
{% endblock %}
