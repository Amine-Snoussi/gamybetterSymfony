{% extends 'base-back.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
    <h1>Publication</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publication.id }}</td>
            </tr>
            <tr>
                <th>Publication</th>
                <td>{{ publication.publication }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ publication.titre }}</td>
            </tr>
            <tr>
                <th>Nbrcommentaire</th>
                <td>{{ publication.nbrcommentaire }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ publication.date ? publication.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ publication.image }}</td>
            </tr>
            <tr>
                <th>Nbrlike</th>
                <td>{{ publication.nbrlike }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_publication_index')}}" class="ri-arrow-go-back-fill btn btn-outline-primary"></a>

    <a href="{{ path('app_publication_edit', {'id': publication.id})}} " class=" btn btn-outline-primary bi bi-pencil-square"></a>

    {{ include('publication/_delete_form.html.twig') }}
{% endblock %}
