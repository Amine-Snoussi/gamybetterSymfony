{% extends 'base.html.twig' %}

{% block title %}Personne index{% endblock %}

{% block body %}
    <h1>Personne index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdPersonne</th>
                <th>NomPrenomPersonne</th>
                <th>AdressePersonne</th>
                <th>EmailPersonne</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr>
                <td>{{ personne.idPersonne }}</td>
                <td>{{ personne.nomPrenomPersonne }}</td>
                <td>{{ personne.adressePersonne }}</td>
                <td>{{ personne.emailPersonne }}</td>
                <td>
                    <a href="{{ path('app_personne_show', {'idPersonne': personne.idPersonne}) }}">show</a>
                    <a href="{{ path('app_personne_edit', {'idPersonne': personne.idPersonne}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_personne_new') }}">Create new</a>
{% endblock %}
