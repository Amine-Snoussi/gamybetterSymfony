{% extends 'base-back.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

 <a href="{{ path('app_game_index') }}" class="ri-arrow-go-back-fill btn btn-outline-primary"></a>

    <a href="{{ path('app_game_edit', {'idMatch': game.idMatch}) }}" class=" btn btn-outline-primary bi bi-pencil-square"></a>

    <table class="table">
        <tbody>
            <tr>
                <th>IdMatch</th>
                <td>{{ game.idMatch }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ game.image }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ game.score }}</td>
            </tr>
            <tr>
                <th>LienStreaming</th>
                <td>{{ game.lienStreaming }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ game.status }}</td>
            </tr>
            <tr>
                <th>Gold</th>
                <td>{{ game.gold }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ game.duree }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ game.date }}</td>
            </tr>
        </tbody>
    </table>

    

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
