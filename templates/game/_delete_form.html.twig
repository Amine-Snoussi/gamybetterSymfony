<form method="post" action="{{ path('app_game_delete', {'idMatch': game.idMatch}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game.idMatch) }}">
    
    <button class="btn bi bi-trash btn btn-outline-danger" style="margin-top: 7px;">Delete</button>
</form>
