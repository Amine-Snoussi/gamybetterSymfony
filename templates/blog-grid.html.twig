{% extends 'base-front.html.twig' %}

{% block title %}BLOG | GAMYBETTER{% endblock %}


{% block breadcrumbs %}
    <div class="nk-gap-1"></div>
    <div class="container">
        <ul class="nk-breadcrumbs">


            <li><a href="index.html">Home</a></li>


            <li><span class="fa fa-angle-right"></span></li>

            <li><a href="#">Blog</a></li>


            <li><span class="fa fa-angle-right"></span></li>

            <li><span>Blog FullWidth</span></li>

        </ul>
    </div>
    <div class="nk-gap-1"></div>
{% endblock %}

{% block blog %}
<!-- START: Posts FullWidth -->

 
                            <div class="product-filter">
                                <div class="widget widget-price-filter">
                                    <form name="" method="post" id="send-search">
                                        <div class="email">
                                            <input style="background-color: #ffff" type="text" title="Search" name="search"  placeholder="Search" id="myInput">
                                            <button class="button" title="Submit" type="submit"><i class="fa fa-search" ></i></button>
                                        </div>
                                    </form>
                                </div>
                            </div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


   <script >
          $(document).ready(function(){
          $("#myInput").on("keyup", function() {
         var value = $(this).val().toLowerCase();
          //console.log(value);
         $("#myTable .nk-blog-post").filter(function() {
     $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
     });
     });
      });
      </script>


<div class="nk-blog-fullwidth" >
<a href="{{ path('tri_nbr_like') }}" class="nk-btn nk-btn-rounded nk-btn-color-dark-3 nk-btn-hover-color-main-1">tri ↑</a>
<a href="{{ path('tri_nbr_likeD') }}" class="nk-btn nk-btn-rounded nk-btn-color-dark-3 nk-btn-hover-color-main-1">tri ↓</a>

    <!-- START: Post -->
    {% for publication in publications %}

<br>
    
<div id="myTable">
    <div class="nk-blog-post">
        <a href="{{ path('blog_details', {'id':publication.id}) }}" class="nk-post-img">
            <img src="{{ asset('uploads/images/' ~ publication.image ) }}" alt="Smell magic in the air. Or maybe barbecue">
            <span class="nk-post-comments-count">{{ publication.nbrcommentaire }}</span>
        </a>
        <div class="nk-gap-2"></div>
        <div class="row vertical-gap">
            <div class="col-md-8 col-lg-9">
                <h2 class="nk-post-title h4"><a href="blog-article.html">{{ publication.titre }}</a></h2>
                <div class="nk-gap"></div>
                <div class="nk-post-text">
                    <p>{{ publication.publication }}</p>
                </div>
            </div>
            <div class="col-md-4 col-lg-3">
                <div class="nk-post-by">
                    <img src="front/assets/images/avatar-1.jpg" alt="Hitman" class="rounded-circle" width="60">
                    by <a href="#">Hitman</a>

                    <br> <p>{{ publication.date ? publication.date|date('Y-m-d') : '' }} </P>
                    <br> <p>{{ publication.nbrcommentaire }}  comments</P>
                </div>
                <div class="nk-gap-3"></div>
                <div class="text-right">
                    <a href="{{ path('blog_details',{'id':publication.id}) }}" class="nk-btn nk-btn-rounded nk-btn-color-dark-3 nk-btn-hover-color-main-1">Read More</a>
                </div>
            </div>
        </div>
    </div>
 </div>

    <!-- END: Post -->

    {%endfor%}
    <div class="nk-gap-3"></div>
    {% block pagination %}
        <!-- START: Pagination -->
        <div class="nk-pagination nk-pagination-center">
            <a href="#" class="nk-pagination-prev">
                <span class="ion-ios-arrow-back"></span>
            </a>
            <nav>
                
    {{ knp_pagination_render(publications) }}
            </nav>
            <a href="#" class="nk-pagination-next">
                <span class="ion-ios-arrow-forward"></span>
            </a>
        </div>
        <!-- END: Pagination -->
    {% endblock %}
{% endblock %}

{% block sidebar %}{% endblock %}
